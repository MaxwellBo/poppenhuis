{
  "rules": {
    "$userId": {
      ".read": true,
      ".write": "auth != null && data.child('authUid').val() == auth.uid",
      "authUid": {
        ".validate": "newData.val() == auth.uid"
      },
      "collections": {
        "$collectionId": {
          ".write": "auth != null && root.child($userId).child('authUid').val() == auth.uid",
          "items": {
            "$itemId": {
              ".write": "auth != null && root.child($userId).child('authUid').val() == auth.uid"
            }
          }
        }
      }
    }
  }
}
